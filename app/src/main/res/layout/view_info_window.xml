<!--                android:layout_marginLeft="2dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:textSize="18dp"-->
<!--                android:text="管理员"/>-->

            <TextView
                android:id="@+id/view_gpt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="次数:"
                android:textStyle="bold"
                android:layout_below="@+id/view_phone"
                android:layout_toRightOf="@+id/info_gender"
                />
            <TextView
                android:id="@+id/info_gpt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_phone"
                android:layout_toRightOf="@+id/view_gpt_num"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:text="99999"/>
        </RelativeLayout>

