<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/md_indigo_100"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/user_ms"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/main_bg">

        <com.matrix.matrixgpt.UITool.CircleImageView
            android:id="@+id/user_head"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/no_user" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_below="@+id/user_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <Button
            android:id="@+id/userEdit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/userName"
            android:layout_alignEnd="@+id/userName"
            android:layout_alignRight="@+id/userName"
            android:background="@drawable/icon_edit"/>

        <TextView
            android:id="@+id/userLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客"
            android:textSize="14dp"
            android:layout_below="@+id/userName"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/md_amber_400"/>

    </RelativeLayout>

    <Button
        android:id="@+id/read"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_ms"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn"
        android:text="@string/user_info" />

    <Button
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/read"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_btn"
        android:text="@string/help" />

    <Button
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/help"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_btn"
        android:text="@string/about" />
</RelativeLayout>