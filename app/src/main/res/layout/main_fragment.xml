    <FrameLayout
        android:id="@+id/banner_container"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </FrameLayout>

    <!--输入模块-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/banner_container"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_layout"
        android:background="@drawable/lay_back_teal"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入"/>

        <Button
            android:id="@+id/get_adv"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_below="@id/edit_text"
            android:background="@drawable/common_btn_back_effect"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:text="测试"/>

        <Button
            android:id="@+id/saveImg_btn"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_below="@id/edit_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="210dp"
            android:layout_marginLeft="210dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/common_btn_back_effect"
            android:text="保存" />

        <Button
            android:id="@+id/chat_btn"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_below="@id/edit_text"
            android:background="@drawable/common_btn_back_effect"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="5dp"
            android:text="聊天" />

        <Button
            android:id="@+id/paint_btn"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_below="@id/edit_text"
            android:background="@drawable/common_btn_back_effect"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:text="绘画" />

        <TextView
            android:id="@+id/prompt_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chat_btn"
            android:layout_marginTop="5dp"
            android:text="提示:由于网络原因，导致AI无法快速响应\n相关技术由OpenAi提供支持"
            android:gravity="center"
            android:textColor="@color/LavaRed"
            android:layout_marginBottom="10dp"
            android:textSize="14dp" />
    </RelativeLayout>

    <!--显示模块-->
    <RelativeLayout
        android:id="@+id/Show_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/lay_back_gray"
        android:layout_below="@id/edit_text_layout">

        <TextView
            android:id="@+id/show_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:scrollbars="vertical"
            android:textIsSelectable="true"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/image_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

</RelativeLayout>