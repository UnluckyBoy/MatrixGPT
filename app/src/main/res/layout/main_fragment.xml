<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_indigo_100">

    <!--输入模块-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_layout"
        android:background="@drawable/lay_back_teal"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入"/>

        <Button
            android:id="@+id/forecast_btn"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_below="@id/edit_text"
            android:background="@drawable/btn_back_blue"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:text="预测" />

        <Button
            android:id="@+id/saveImg_btn"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_below="@id/edit_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="210dp"
            android:layout_marginLeft="210dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_back_blue"
            android:text="保存" />

        <Button
            android:id="@+id/chat_btn"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_below="@id/edit_text"
            android:background="@drawable/btn_back_blue"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="5dp"
            android:text="聊天" />

        <Button
            android:id="@+id/paint_btn"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_below="@id/edit_text"
            android:background="@drawable/btn_back_blue"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:text="绘画" />

        <TextView
            android:id="@+id/prompt_View"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_below="@id/chat_btn"
            android:layout_marginTop="5dp"
            android:text="提示:由于网络原因，AI或许无法快速响应"
            android:gravity="center"
            android:textColor="@color/LavaRed"
            android:layout_marginBottom="10dp"
            android:textSize="14dp" />
    </RelativeLayout>

    <!--广告-->
    <!--不可设置visibility=gone,高度设置成wrap_content-->
    <FrameLayout
        android:id="@+id/Adv_banner"
        android:layout_below="@id/edit_text_layout"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">
    </FrameLayout>

    <!--显示模块-->
    <RelativeLayout
        android:id="@+id/Show_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/lay_back_gray"
        android:layout_below="@id/Adv_banner">

        <TextView
            android:id="@+id/show_View"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginTop="5dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textIsSelectable="true"
            android:textSize="24dp"/>

        <ImageView
            android:id="@+id/image_View"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

</RelativeLayout>